include ../../assets/pug/_head
include ../../assets/pug/_scripts

- title = 'Conozco los instructivos'
- subtitle = 'Lo que conozco'

<!DOCTYPE html>
html(lang="es")
    +head
        style.
            .options div {
                padding: 10px;
                border-radius: 6px;
                border: none !important;
                font-weight: bold;
                box-shadow: 4px 4px 0 rgba(0, 0, 0, 0.1);
            }
            .options div.active {
                color: #fff !important;
                background: var(--main) !important;
            }
            .c1 .options div {
                background: #DDF0EE;
                color: #00AEB5;
            }
            .c2 .options div {
                background: #DCD5E1;
                color: #7E5F99;
            }
            .c3 .options div {
                background: #E7F1D8;
                color: #6CB743;
            }
            .c4 .options div {
                background: #FDE8CF;
                color: #E9832C;
            }

    body
        #app.container.my-5.animate__animated.animate__fadeIn.animate__delay-1s
            h1 #{title}
            if subtitle.length>1
                h2 #{subtitle}

            .row: .col-12: img(src="aimg/a1.png").w-100

            .instruccion.mt-5 Lee las preguntas y encierra la respuesta correcta. Consulta las páginas 61 a 64 de tu libro de texto SEP y la sección Te cuento que...
            
            .row.mt-3
                .col-12: choose(v-model="r[0]" :ref="refCount()" num="1." text="¿Qué tipo de textos son necesarios para hacer una manualidad?" :options="['Los instructivos.','Los expositivos.']" @isright="right++" answer="Los instructivos." initclass="c1")
                .col-12: choose(v-model="r[1]" :ref="refCount()" num="2." text="¿Cómo deben ser las indicaciones de un instructivo?" :options="['Extensas y bien explicadas.','Breves pero comprensibles.']" @isright="right++" answer="Breves pero comprensibles." initclass="c2")
                .col-12: choose(v-model="r[2]" :ref="refCount()" num="3." text="¿Qué debe contener un instructivo para saber cómo debe quedar lo que haremos?" :options="['Imágenes.','Una conclusión.']" @isright="right++" answer="Imágenes." initclass="c3")
                .col-12: choose(v-model="r[3]" :ref="refCount()" num="4." text="¿En qué forma están los verbos que terminan en –ar, –er, –ir?" :options="['En gerundio.','En infinitivo.']" @isright="right++" answer="En infinitivo." initclass="c4")






            finalize(@evaluate="finalizar" @reset="reset" :resultado="resultado" :right="right" :total="total")
