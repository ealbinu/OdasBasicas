include ../../assets/pug/_head
include ../../assets/pug/_scripts

- title = 'Reconozco características de los cuentos'
- subtitle = 'Lo que conozco'

<!DOCTYPE html>
html(lang="es")
    +head
        style.
            .ex1 .dragdrop:nth-child(1) {
                left: 60%;
                top: 2%;
                width: 36%;
            }
            .ex1 .dragdrop:nth-child(2) {
                left: 6%;
                top: 31%;
                width: 24%;
            }
            .ex1 .dragdrop:nth-child(3) {
                left: 69%;
                top: 29%;
                width: 26%;
            }
            .ex1 .dragdrop:nth-child(4) {
                left: 35%;
                top: 68%;
                width: 32%;
            }
            .ex1 .dragdrop .draggable > div:not(.result) {
                background: #fff;
                border-radius: 6px;
                border: 2px dashed #D3E096;
                box-shadow: 4px 4px 0 rgba(0, 0, 0, 0.1);
                display: flex;
                justify-content: center;
                align-items: center;
            }
            @media (max-width: 992px) {
                .ex1 .dragdrop .draggable {
                    min-height: 30px;
                }
            }
            @media (max-width: 768px) {
                .ex1 .dragdrop .draggable {
                    min-height: 22px;
                    font-size: 0.7rem;
                }
            }
            @media (max-width: 680px) {
                .ex1 .dragdrop .draggable {
                    min-height: 16px;
                    font-size: 0.6rem;
                }
            }


    body
        #app.container.my-5.animate__animated.animate__fadeIn.animate__delay-1s
            h1 #{title}
            if subtitle.length>1
                h2 #{subtitle}

            .instruccion.mt-5 Analiza cada ilustración y coloca su nombre donde corresponda.

            .recuadropalabras.dragdrop: dragdrop(:options="['La princesa.','El dragón.', 'El sapo.', 'El príncipe.']" :options-ok="[]")
            
            .row.mt-3.ex1: .col-12
                .imagerelative
                    img(src="aimg/bg.png").w-100
                    .items
                        dragdrop(v-model="r[0]" :ref="refCount()" @isright="right++" :options="[]" :options-ok="['El dragón.']")
                        dragdrop(v-model="r[1]" :ref="refCount()" @isright="right++" :options="[]" :options-ok="['El sapo.']")
                        dragdrop(v-model="r[2]" :ref="refCount()" @isright="right++" :options="[]" :options-ok="['La princesa.']")
                        dragdrop(v-model="r[3]" :ref="refCount()" @isright="right++" :options="[]" :options-ok="['El príncipe.']")





            finalize(@evaluate="finalizar" @reset="reset" :resultado="resultado" :right="right" :total="total")
