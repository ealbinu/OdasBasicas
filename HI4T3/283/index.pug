                transform: rotate(-48deg);
            }

    body
        #app.container.my-5.animate__animated.animate__fadeIn.animate__delay-1s
            h1 #{title}
            if subtitle.length>1
                h2 #{subtitle}

            .instruccion.mt-5 Completa las siguientes oraciones. Después busca las palabras en la sopa de letras. Consulta las páginas 168 y 169 de tu libro de texto SEP.

            .row.mt-3.ex.centerrow
                .col-md-6
                    imgbg(img="aimg/soup.png" initclass="soup")
                        template(v-for="(i, index) in 8")
                            selectable(:isok="true" v-model="d['s'+index]" :ref="refCount()" @isright="right++")
                .col-md-6
                    - var arrA = []
                    - arrA.push('<strong>1.</strong> ')
                    - arrA.push(' El cura Miguel ')
                    - arrA.push(['Hidalgo'])
                    - arrA.push(' formó un ejército con algunos ')
                    - arrA.push(['criollos'])
                    - arrA.push(', campesinos e indígenas.')
                    - arrA.push('<br>')
                    - arrA.push('<strong>2.</strong> ')
                    - arrA.push(' El ejército ')
                    - arrA.push(['insurgente'])
                    - arrA.push(' no tenía experiencia con las armas.')
                    - arrA.push('<br>')
                    - arrA.push('<strong>3.</strong> ')
                    - arrA.push(' Ignacio')
                    - arrA.push(['Allende'])
                    - arrA.push(' fue el encargado de disciplinar al recién formado ejército.')
                    - arrA.push('<br>')
                    - arrA.push('<strong>4.</strong> ')
                    - arrA.push(' En ')
                    - arrA.push(['Guanajuato'])
                    - arrA.push(', los insurgentes tomaron la Alhóndiga de ')
                    - arrA.push(['Granaditas'])
                    - arrA.push('.')
                    - arrA.push('<br>')
                    - arrA.push('<strong>5.</strong> ')
                    - arrA.push(' El ejército ')
                    - arrA.push(['realista'])
                    - arrA.push(' del ')
                    - arrA.push(['virrey'])
                    - arrA.push('detuvo el avance de Hidalgo y su tropa en el monte de Las Cruces.')
                    +parrafo(0, arrA, 'c4 mt-2')





            finalize(@evaluate="finalizar" @reset="reset" :resultado="resultado" :right="right" :total="total")
