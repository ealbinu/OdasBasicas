include ../../assets/pug/_head
include ../../assets/pug/_scripts

- title = 'Construyo una pirámide'
- subtitle = 'Construcciones con palillos'

<!DOCTYPE html>
html(lang="es")
    +head
        style.
            .imgs {
                display: flex;
                justify-content: center;
                align-items: center;
                max-width: fit-content;
                margin: 0 auto;
                border: 4px solid #f5f5f5;
                padding: 10px;
                border-radius: 10px;
                margin-bottom: 10px;
            }
            .imgs img {
                max-height: 100px;
            }
            .imgs .inputbox input {
                width: 60px;
                font-size: 1.2rem;
            }
            @media (max-width: 680px) {
                .imgs {
                    flex-direction: column;
                }
            }

    body
        #app.container.my-5.animate__animated.animate__fadeIn.animate__delay-1s
            h1 #{title}
            if subtitle.length>1
                h2 #{subtitle}
            
            .row: embedvideo(urlid="oRKpSb9S5qg" title="Los triángulos")

            .instruccion.mt-5 Escribe en cada base el número de la pirámide que le corresponde.

            .row.mt-3.ex1
                .col-6.text-center
                    .imgs
                        img(src="aimg/a1.png").img-fluid
                        numbers(c=4) 1
                    .imgs
                        img(src="aimg/a2.png").img-fluid
                        numbers(c=8) 2
                    .imgs
                        img(src="aimg/a3.png").img-fluid
                        numbers(c=7) 3
                    .imgs
                        img(src="aimg/a4.png").img-fluid
                        numbers(c=3) 4
                .col-6.text-center
                    .imgs
                        img(src="aimg/b1.png").img-fluid
                        inputbox(v-model="r[0]" :ref="refCount()" @isright="right++" :answer="4" type="number" placeh="#")
                    .imgs
                        img(src="aimg/b2.png").img-fluid
                        inputbox(v-model="r[1]" :ref="refCount()" @isright="right++" :answer="1" type="number" placeh="#")
                    .imgs
                        img(src="aimg/b3.png").img-fluid
                        inputbox(v-model="r[2]" :ref="refCount()" @isright="right++" :answer="2" type="number" placeh="#")
                    .imgs
                        img(src="aimg/b4.png").img-fluid
                        inputbox(v-model="r[3]" :ref="refCount()" @isright="right++" :answer="3" type="number" placeh="#")
            





            finalize(@evaluate="finalizar" @reset="reset" :resultado="resultado" :right="right" :total="total")
