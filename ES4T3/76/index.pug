include ../../assets/pug/_head
include ../../assets/pug/_scripts

- title = 'Aprendo a cortar palabras'
- subtitle = ''

<!DOCTYPE html>
html(lang="es")
    +head
        style.
            .tablemod {
                background: var(--pastel1);
                padding: 10px;
                border-radius: 10px;
                font-size: 1.2rem;
                margin: 10px 0;
            }
            @media (max-width: 680px) {
                .tablemod {
                    font-size: 0.9rem;
                }
            }
            .tablemod:nth-child(2) {
                background: var(--pastel2);
            }
            .tablemod:nth-child(3) {
                background: var(--pastel3);
            }
            .tablemod:nth-child(4) {
                background: var(--pastel4);
            }
            .tablemod:nth-child(5) {
                background: var(--pastel5);
            }
            .selectable {
                display: inline-block;
            }
            .selectable .circledactive {
                display: none;
            }
            .selectable.on {
                border: 2px solid var(--main);
                border-radius: 6px;
            }

    body
        #app.container.my-5.animate__animated.animate__fadeIn.animate__delay-1s
            h1 #{title}
            if subtitle.length>1
                h2 #{subtitle}

            .instruccion.mt-5 Encierra las letras iniciales de los nombres y forma las siglas de las siguientes instituciones oficiales.

            .mt-3.ex1
                .tablemod
                    .row.no-gutters.centerrow.flex-wrap
                        .col-md-6.col-12.text
                            span
                                selectable(:isok="true" v-model="r[0]" :ref="refCount()" @isright="right++") C
                                | omisión 
                            span
                                selectable(:isok="true" v-model="r[1]" :ref="refCount()" @isright="right++") F
                                | ederal 
                            | de 
                            span
                                selectable(:isok="true" v-model="r[2]" :ref="refCount()" @isright="right++") E
                                | lectricidad
                        .col-4.col-md: inputbox(v-model="r[3]" :ref="refCount()" @isright="right++" answer="C" type="text" placeh="-")
                        .col-4.col-md: inputbox(v-model="r[4]" :ref="refCount()" @isright="right++" answer="F" type="text" placeh="-")
                        .col-4.col-md: inputbox(v-model="r[5]" :ref="refCount()" @isright="right++" answer="E" type="text" placeh="-")
                .tablemod
                    .row.no-gutters.centerrow.flex-wrap
                        .col-md-6.col-12.text
                            span
                                selectable(:isok="true" v-model="r[6]" :ref="refCount()" @isright="right++") S
                                | ecretaría 
                            | de 
                            span
                                selectable(:isok="true" v-model="r[7]" :ref="refCount()" @isright="right++") R
                                | elaciones 
                            span
                                selectable(:isok="true" v-model="r[8]" :ref="refCount()" @isright="right++") E
                                | xteriores
                        .col-4.col-md: inputbox(v-model="r[9]" :ref="refCount()" @isright="right++" answer="S" type="text" placeh="-")
                        .col-4.col-md: inputbox(v-model="r[10]" :ref="refCount()" @isright="right++" answer="R" type="text" placeh="-")
                        .col-4.col-md: inputbox(v-model="r[11]" :ref="refCount()" @isright="right++" answer="E" type="text" placeh="-")
                .tablemod
                    .row.no-gutters.centerrow.flex-wrap
                        .col-md-6.col-12.text
                            span
                                selectable(:isok="true" v-model="r[12]" :ref="refCount()" @isright="right++") S
                                | ecretaría 
                            | de 
                            span
                                selectable(:isok="true" v-model="r[13]" :ref="refCount()" @isright="right++") E
                                | ducación 
                            span
                                selectable(:isok="true" v-model="r[14]" :ref="refCount()" @isright="right++") P
                                | ública
                        .col-4.col-md: inputbox(v-model="r[15]" :ref="refCount()" @isright="right++" answer="S" type="text" placeh="-")
                        .col-4.col-md: inputbox(v-model="r[16]" :ref="refCount()" @isright="right++" answer="E" type="text" placeh="-")
                        .col-4.col-md: inputbox(v-model="r[17]" :ref="refCount()" @isright="right++" answer="P" type="text" placeh="-")
                .tablemod
                    .row.no-gutters.centerrow.flex-wrap
                        .col-md-6.col-12.text
                            span
                                selectable(:isok="true" v-model="r[18]" :ref="refCount()" @isright="right++") I
                                | nstituto 
                            span
                                selectable(:isok="true" v-model="r[19]" :ref="refCount()" @isright="right++") N
                                | acional 
                            span
                                selectable(:isok="true" v-model="r[20]" :ref="refCount()" @isright="right++") E
                                | lectoral
                        .col-4.col-md: inputbox(v-model="r[21]" :ref="refCount()" @isright="right++" answer="I" type="text" placeh="-")
                        .col-4.col-md: inputbox(v-model="r[22]" :ref="refCount()" @isright="right++" answer="N" type="text" placeh="-")
                        .col-4.col-md: inputbox(v-model="r[23]" :ref="refCount()" @isright="right++" answer="E" type="text" placeh="-")

            .instruccion.mt-5 Lee el siguiente formato y escribe los significados de las abreviaturas en los espacios correspondientes.

            .row: .col-12: img(src="aimg/formato.png").w-100

            .mt-3.ex1.text-center
                .tablemod
                    .row.no-gutters.centerrow.flex-wrap
                        .col: numbers(c=1 smaller) Num.
                        .col: inputbox(v-model="r[24]" :ref="refCount()" @isright="right++" answer="Número" type="text" placeh="-")
                .tablemod
                    .row.no-gutters.centerrow.flex-wrap
                        .col: numbers(c=2 smaller) Col.
                        .col: inputbox(v-model="r[25]" :ref="refCount()" @isright="right++" answer="Colonia" type="text" placeh="-")
                .tablemod
                    .row.no-gutters.centerrow.flex-wrap
                        .col: numbers(c=3 smaller) Cd.
                        .col: inputbox(v-model="r[26]" :ref="refCount()" @isright="right++" answer="Ciudad" type="text" placeh="-")
                .tablemod
                    .row.no-gutters.centerrow.flex-wrap
                        .col: numbers(c=4 smaller) Edo.
                        .col: inputbox(v-model="r[27]" :ref="refCount()" @isright="right++" answer="Estado" type="text" placeh="-")
                .tablemod
                    .row.no-gutters.centerrow.flex-wrap
                        .col: numbers(c=5 smaller) C.P.
                        .col: inputbox(v-model="r[28]" :ref="refCount()" @isright="right++" answer="Código postal" type="text" placeh="-")
                .tablemod
                    .row.no-gutters.centerrow.flex-wrap
                        .col: numbers(c=6 smaller) Tel.
                        .col: inputbox(v-model="r[29]" :ref="refCount()" @isright="right++" answer="Teléfono" type="text" placeh="-")


            finalize(@evaluate="finalizar" @reset="reset" :resultado="resultado" :right="right" :total="total")
