    body
        #app.container.my-5.animate__animated.animate__fadeIn.animate__delay-1s
            h1 #{title}
            if subtitle.length>1
                h2 #{subtitle}

            .instruccion.mt-5 Imagina que eres el editor de la sección de deportes de un periódico y que, al revisar la siguiente noticia, encontraste algunos errores. Enciérralos con color #[strong.main rojo].

            .row.mt-3.ex1: .col-12
                .imagerelative
                    img(src="aimg/a.png").w-100
                    .items
                        selectable(:isok="true" v-model="r[0]" :ref="refCount()" @isright="right++")
                        selectable(:isok="true" v-model="r[1]" :ref="refCount()" @isright="right++")
                        selectable(:isok="true" v-model="r[2]" :ref="refCount()" @isright="right++")
                        selectable(:isok="true" v-model="r[3]" :ref="refCount()" @isright="right++")
                        selectable(:isok="true" v-model="r[4]" :ref="refCount()" @isright="right++")
            


            .instruccion.mt-5 Escribe los nombres que corresponden a cada una de las partes de la pirámide invertida.

            .row.mt-3.ex2: .col-12
                .imagerelative
                    img(src="aimg/b.png").w-100
                    .items
                        inputbox(v-model="r[5]" :ref="refCount()" @isright="right++"  type="text" placeh="-" answer="Entrada")
                        inputbox(v-model="r[6]" :ref="refCount()" @isright="right++"  type="text" placeh="-" answer="Título")
                        inputbox(v-model="r[7]" :ref="refCount()" @isright="right++"  type="text" placeh="-" answer="Complemento")
                        inputbox(v-model="r[8]" :ref="refCount()" @isright="right++"  type="text" placeh="-" answer="Cuerpo de la noticia")
            





            finalize(@evaluate="finalizar" @reset="reset" :resultado="resultado" :right="right" :total="total")
