        style.
            .img {
                position: relative;
            }
            .inputbox {
                position: absolute;
                left: 0;
                top: 0;
            }
            .inputbox input {
                font-size: 1rem;
                padding: 0;
                border: none;
                border-radius: 4px;
                text-align: center;
            }
            @media (max-width: 768px) {
                .inputbox input {
                    font-size: 0.7rem;
                }
            }
            @media (max-width: 420px) {
                .inputbox input {
                    font-size: 0.4rem;
                }
            }
            .inputbox:nth-child(1) {
                left: 5%;
                top: 24%;
                width: 24%;
            }
            .inputbox:nth-child(2) {
