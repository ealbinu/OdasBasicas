include ../../assets/pug/_head
include ../../assets/pug/_scripts

- title = 'Ubico el Porfiriato'
- subtitle = 'Panorama del periodo'

<!DOCTYPE html>
html(lang="es")
    +head
        style.
            .ex1 .inputbox {
                justify-content: flex-start;
                margin-bottom: 10px;
                background: #00AEB5;
                padding: 2px;
                border-radius: 10px;
            }
            .ex1 .inputbox input {
                font-size: 1.2rem;
                max-width: 100px;
                margin-right: 2px;
                padding: 6px;
                border-radius: 10px;
            }
            .ex1 .inputbox .txt {
                background: #F4FAF9;
                padding: 10px;
                flex-grow: 1;
                border-radius: 10px;
            }
            .dragdrop .draggable > div:not(.result) {
                display: flex;
                justify-content: space-around;
            }
            .dragdrop .draggable > div:not(.result) > div {
                background: #fff;
                padding: 10px;
                border-radius: 10px;
                cursor: move;
            }
            .areas {
                display: flex;
                flex-direction: column;
                justify-content: space-between;
                font-size: 1.2rem;
                background: #f5f5f5;
                padding: 10pX;
                border-radius: 10px;
            }
            .areas .dragdrop {
                margin-top: 20px;
            }
            .areas .dragdrop .draggable > div:not(.result) {
                min-height: 60px;
                background: #4EAE64;
                border-radius: 10px;
                flex-direction: column;
                padding: 10px;
            }
            .ex3 .recuadropalabras > div:nth-child(1) strong {
                color: #0083BF;
                background: #F1F6F8;
                border: 2px solid #0083BF;
            }
            .ex3 .recuadropalabras > div:nth-child(2) strong {
                color: #E9832C;
                background: #FFF7ED;
                border: 2px solid #E9832C;
            }
            .ex3 .recuadropalabras > div:nth-child(3) strong {
                color: #6A4287;
                background: #F5F1F4;
                border: 2px solid #6A4287;
            }
            .ex3 .recuadropalabras > div:nth-child(4) strong {
                color: #6CB743;
                background: #F7FAF0;
                border: 2px solid #6CB743;
            }

            .choose .options > div {
                width: 20px;
                height: 20px;
                background: #f5f5f5;
                border-bottom: none;
                border-radius: 4px;
                text-indent: -9999px;
                overflow: hidden;
            }
            .choose .options > div:nth-child(1) {
                background: #0883BF;
            }
            .choose .options > div:nth-child(2) {
                background: #E8832D;
            }
            .choose .options > div:nth-child(3) {
                background: #6B4387;
            }
            .choose .options > div:nth-child(4) {
                background: #6EB745;
            }
            .choose .options > div.active {
                border: none;
            }
            .conj {
                border: 8px solid #f5f5f5;
                border-radius: 10px;
                margin-bottom: 10px;
            }
            .conj.c1 {
                border-color: #0883BF;
                color: #0883BF;
                background: #F1F6F8;
            }
            .conj.c2 {
                border-color: #E8832D;
                color: #E8832D;
                background: #FFF7ED;
            }
            .conj.c3 {
                border-color: #6B4387;
                color: #6B4387;
                background: #F5F1F4;
            }
            .conj.c4 {
                border-color: #6EB745;
                color: #6EB745;
                background: #F7FAF0;
            }


    body
        #app.container.my-5.animate__animated.animate__fadeIn.animate__delay-1s
            h1 #{title}
            if subtitle.length>1
                h2 #{subtitle}

            .instruccion.mt-5 Ordena los eventos cronológicamente colocando los números del 1 al 4. Consulta las páginas 78 y 79 de tu libro de texto SEP.

            .row.mt-3.ex1.flex-wrap.align-items-center
                .col-md-8
                    inputbox(v-model="r[0]" :ref="refCount()" @isright="right++" answer="4" type="number" placeh="#")
                        template(v-slot:after=""): .txt Revolución Mexicana.
                    inputbox(v-model="r[1]" :ref="refCount()" @isright="right++" answer="3" type="number" placeh="#")
                        template(v-slot:after=""): .txt Segundo periodo presidencial de Porfirio Díaz (dictadura).
                    inputbox(v-model="r[2]" :ref="refCount()" @isright="right++" answer="2" type="number" placeh="#")
                        template(v-slot:after=""): .txt Presidencia de Manuel González.
                    inputbox(v-model="r[3]" :ref="refCount()" @isright="right++" answer="1" type="number" placeh="#")
                        template(v-slot:after=""): .txt Primer periodo presidencial de Porfirio Díaz.
                .col-md: img(src="aimg/1a.png").img-fluid
            

            .instruccion.mt-5 Coloca las respuestas en cada línea.

            .recuadropalabras: dragdrop(:options="['Cuatro años.','XIX.','Tres décadas.']" :options-ok="[]")
            .row.mt-3.ex2
                .col-md-4.text-center: .areas
                    div.txt La dictadura de Porfirio Díaz duró:
                    dragdrop(v-model="r[4]" :ref="refCount()" @isright="right++" :options="[]" :options-ok="['Tres décadas.']")
                .col-md-4.text-center: .areas
                    div.txt Porfirio Díaz comenzó a gobernar durante el siglo:
                    dragdrop(v-model="r[5]" :ref="refCount()" @isright="right++" :options="[]" :options-ok="['XIX.']")
                .col-md-4.text-center: .areas
                    div.txt La presidencia de Manuel González duró:
                    dragdrop(v-model="r[6]" :ref="refCount()" @isright="right++" :options="[]" :options-ok="['Cuatro años.']")


            .instruccion.mt-5 Colorea el conjunto de estados según el color del caudillo que le corresponde. Consulta el mapa de la página 79 de tu libro de texto SEP.

            .mt-3.ex3: recuadropalabras(:palabras="['Álvaro Obregón','Francisco Villa', 'Pablo González','Emiliano Zapata']")
            .row.mt-3.ex3
                .col-md-6: .conj(:class="r[7]"): choose(v-if="tempsobj.a" v-model="r[7]" :ref="refCount()" text="Sonora, Sinaloa, Nayarit, Jalisco, Michoacán, Estado de México y Durango." :options="tempsobj.a" @isright="right++" :answer-num="0")
                .col-md-6: .conj(:class="r[8]"): choose(v-if="tempsobj.a" v-model="r[8]" :ref="refCount()" text="Chihuahua, Durango, Coahuila, Zacatecas, Aguascalientes, Jalisco, San Luis Potosí, Guanajuato, Querétaro, Michoacán, Estado de México e Hidalgo." :options="tempsobj.a" @isright="right++" :answer-num="1")
                .col-md-6: .conj(:class="r[9]"): choose(v-if="tempsobj.a" v-model="r[9]" :ref="refCount()" text="Coahuila,Nuevo León, Tamaulipas, Zacatecas, San Luis Potosí, Guanajuato y Querétaro." :options="tempsobj.a" @isright="right++" :answer-num="2")
                .col-md-6: .conj(:class="r[10]"): choose(v-if="tempsobj.a" v-model="r[10]" :ref="refCount()" text="Estado de México, Morelos, Guerrero, Puebla y Ciudad de México." :options="tempsobj.a" @isright="right++" :answer-num="3")

            finalize(@evaluate="finalizar" @reset="reset" :resultado="resultado" :right="right" :total="total")
        +scripts
            script.
                app.$set(app.tempsobj, 'a', [
                    'c1',
                    'c2',
                    'c3',
                    'c4'
                    ])