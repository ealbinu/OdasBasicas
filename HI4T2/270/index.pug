include ../../assets/pug/_head
include ../../assets/pug/_scripts
include ../../assets/pug/_parrafosinput

- title = 'Reconozco la nueva cultura'
- subtitle = 'Expansión y colonización a nuevos territorios'

<!DOCTYPE html>
html(lang="es")
    +head
        style.
            /*
            .ex1 {}
            */
    body
        #app.container.my-5.animate__animated.animate__fadeIn.animate__delay-1s
            h1 #{title}
            if subtitle.length>1
                h2 #{subtitle}

            .instruccion.mt-5 Selecciona la respuesta correcta de cada pregunta. Consulta la página 96 de tu libro de texto SEP.

            .row.mt-3.ex1
                .col-12
                    choose(v-model="r[0]" :ref="refCount()" num="1." text="¿En dónde se descubrieron yacimientos de plata entre 1534 y 1548?" :options="['En Jalisco, Zacatecas y Nuevo León.','En Guerrero, Zacatecas y Guanajuato.','En Querétaro,Yucatán y Guerrero.']" @isright="right++" :answer-num="1")

                    choose(v-model="r[1]" :ref="refCount()" num="2." text="¿Quién inició una expedición hacia el sur para buscar metales preciosos y le exigió a los mayas sus riquezas?" :options="['Nuño Beltrán de Guzmán.','Hernán Cortés.','Pedro de Alvarado.']" @isright="right++" :answer-num="2")
            
                    choose(v-model="r[2]" :ref="refCount()" num="3." text="¿Quién exploró la región de lo que hoy son los estados de Jalisco y Zacatecas?" :options="['Pedro de Alvarado.','Cristóbal de Olid.','Nuño Beltrán de Guzmán.']" @isright="right++" :answer-num="2")

                    choose(v-model="r[3]" :ref="refCount()" num="4." text="¿En qué año se fundó Guadalajara?" :options="['En 1492.','En 1542.','En 1521.']" @isright="right++" :answer-num="1")


            .instruccion.mt-5 Completa el texto con las palabras del recuadro.

            recuadropalabras(:palabras="['plaza principal','trigo','cultura','creencias religiosas','Conquista','náhuatl']")
            
            .row.mt-3.ex2
                .col-12
                    - var arra = []
                    - arra.push('Después de la')
                    - arra.push(['Conquista',4])
                    - arra.push(', las ciudades comenzaron a modificarse, por lo que tenían una')
                    - arra.push(['plaza principal',5])
                    - arra.push(' y calles rectas, muy al estilo europeo. En tanto, la')
                    - arra.push(['cultura',6])
                    - arra.push(' y la vida diaria se vieron modificadas, ya que poco a poco la cocina indígena integró ingredientes europeos, como el')
                    - arra.push(['trigo',7])
                    - arra.push(' y algunos animales. Además, los frailes se propusieron transformar las')
                    - arra.push(['creencias religiosas',8])
                    - arra.push('. En tanto, según pasaron los años y había más convivencia, el idioma español fue tomando palabras del ')
                    - arra.push(['náhuatl',9])
                    - arra.push(', como jitomate o metate.')
                    +parrafoinputs(arra)

            finalize(@evaluate="finalizar" @reset="reset" :resultado="resultado" :right="right" :total="total")
        +scripts
