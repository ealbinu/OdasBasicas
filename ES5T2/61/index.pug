include ../../assets/pug/_head
include ../../assets/pug/_scripts

- title = 'Puedo interpretar gráficas'
- subtitle = 'Los artículos de divulgación científica'

<!DOCTYPE html>
html(lang="es")
    +head
        style.
            /*
            .ex1 {}
            */
    body
        #app.container.my-5.animate__animated.animate__fadeIn.animate__delay-1s
            h1 #{title}
            if subtitle.length>1
                h2 #{subtitle}

            .instruccion.mt-5 Lee con atención el siguiente fragmento de un artículo y marca así <checkmark></checkmark> las gráficas y las tablas que representen la información contenida.
            .row: .col-12: img(src="aimg/a0.png").w-100
            .row.mt-3.ex1
                .col-md-6: check(v-model="r[0]" :ref="refCount()"  @isright="right++" :answer="true"): img(src="aimg/a1.png").img-fluid
                .col-md-6: check(v-model="r[1]" :ref="refCount()"  @isright="right++" :answer="false"): img(src="aimg/a2.png").img-fluid
                .col-md-6: check(v-model="r[2]" :ref="refCount()"  @isright="right++" :answer="false"): img(src="aimg/a3.png").img-fluid
                .col-md-6: check(v-model="r[3]" :ref="refCount()"  @isright="right++" :answer="true"): img(src="aimg/a4.png").img-fluid
            





            finalize(@evaluate="finalizar" @reset="reset" :resultado="resultado" :right="right" :total="total")
