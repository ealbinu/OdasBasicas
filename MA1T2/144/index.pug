include ../../assets/pug/_head
include ../../assets/pug/_scripts

- title = 'Escribo el nombre de los números'
- subtitle = 'Trayecto 6. Otra vez 50. Del 1 al 50 / El número al que llega'

<!DOCTYPE html>
html(lang="es")
    +head
        style.
            .card { width: 60px; height: 74px; border:none; }
            .ex0 .options {
                justify-content: space-evenly;
            }
            .ex0 .options div {
                margin: 10px 20px;
                font-size: 1.6rem;
            }

            .ex1 .inputbox input {font-size: 1.2rem; }
            .ex1{ border: 2px solid #A48EB7;  margin-bottom: 10px; border-radius: 10px; padding: 10px; align-items:center;}
            .ex2 .inputbox {
                background: #f5f5f5;
                padding: 10px;
                border-radius: 10px;
                font-size: 1.2rem;
                font-weight: bold;
                margin-bottom: 10px;
            }
            .ex2 .inputbox input {
                font-size: 1.2rem;
                margin: 0 10px;
                max-width: 80px;
                padding: 2px;
            }
            .ex3 .inputbox input{ font-size:1.5rem; }

    body
        #app.container.my-5.animate__animated.animate__fadeIn.animate__delay-1s
            h1 #{title}
            if subtitle.length>1
                h2 #{subtitle}

            .instruccion.mt-5 Observa el valor de las tarjetas y contesta la pregunta. Después realiza lo que se pide.
            .row: .col-12.text-center: img(src="aimg/1a.png").img-fluid
            .row.mt-3.ex0
                .col-12
                    choose(v-model="r[0]" :ref="refCount()" num="1." text="¿Cuál es la tarjeta que tiene el valor más grande?" :options="['La roja.', 'La azul.']" @isright="right++" answer="La roja.")
            .row.mt-3.ex0
                .col-12
                    .label.h6.px-3 #[strong 2.] #[span  Escribe la cantidad que representa cada conjunto.]
            
            .row.mt-3.ex1
                .col-8: .row.wrap
                        img(src="aimg/roja.png" v-for="(i, index) in 5").img-fluid.card
                        img(src="aimg/azul.png" v-for="(i, index) in 0").img-fluid.card
                .col: inputbox(v-model="r[1]" :ref="refCount()" @isright="right++" :answer="50" type="number" placeh="#")
            .row.mt-3.ex1
                .col-8: .row.wrap
                        img(src="aimg/roja.png" v-for="(i, index) in 3").img-fluid.card
                        img(src="aimg/azul.png" v-for="(i, index) in 2").img-fluid.card
                .col: inputbox(v-model="r[2]" :ref="refCount()" @isright="right++" :answer="32" type="number" placeh="#")
            .row.mt-3.ex1
                .col-8: .row.wrap
                        img(src="aimg/roja.png" v-for="(i, index) in 4").img-fluid.card
                        img(src="aimg/azul.png" v-for="(i, index) in 1").img-fluid.card
                .col: inputbox(v-model="r[3]" :ref="refCount()" @isright="right++" :answer="41" type="number" placeh="#")
            .row.mt-3.ex1
                .col-8: .row.wrap
                        img(src="aimg/roja.png" v-for="(i, index) in 4").img-fluid.card
                        img(src="aimg/azul.png" v-for="(i, index) in 0").img-fluid.card
                .col: inputbox(v-model="r[4]" :ref="refCount()" @isright="right++" :answer="40" type="number" placeh="#")
            .row.mt-3.ex1
                .col-8: .row.wrap
                        img(src="aimg/roja.png" v-for="(i, index) in 4").img-fluid.card
                        img(src="aimg/azul.png" v-for="(i, index) in 4").img-fluid.card
                .col: inputbox(v-model="r[5]" :ref="refCount()" @isright="right++" :answer="44" type="number" placeh="#")


            .instruccion.mt-5 Escribe los números que faltan en cada suma.
            .row.mt-3.ex2
                .col-md-4
                    inputbox(v-model="r[6]" :ref="refCount()" @isright="right++" :answer="30" type="number" placeh="#")
                        template(v-slot:before="") 20 + 10 = 
                .col-md-4
                    inputbox(v-model="r[7]" :ref="refCount()" @isright="right++" :answer="6" type="number" placeh="#")
                        template(v-slot:after="") + 8 = 14 
                .col-md-4
                    inputbox(v-model="r[8]" :ref="refCount()" @isright="right++" :answer="40" type="number" placeh="#")
                        template(v-slot:before="") 10 + 30 =

            .instruccion.mt-5 Escribe el nombre de los siguientes números.

            .row.mt-3.ex3
                .col-md-4.text-center
                    numbers(c="1") 21
                    inputbox(v-model="r[9]" :ref="refCount()" @isright="right++" answer="veintiuno" type="text" placeh="-")
                .col-md-4.text-center
                    numbers(c="2") 50
                    inputbox(v-model="r[10]" :ref="refCount()" @isright="right++" answer="cincuenta" type="text" placeh="-")
                .col-md-4.text-center
                    numbers(c="4") 12
                    inputbox(v-model="r[11]" :ref="refCount()" @isright="right++" answer="doce" type="text" placeh="-")

            finalize(@evaluate="finalizar" @reset="reset" :resultado="resultado" :right="right" :total="total")
        +scripts
