include ../../assets/pug/_head
include ../../assets/pug/_scripts

- title = 'Sigo contando'
- subtitle = 'Más manteles / ¿Cuántos son?'

<!DOCTYPE html>
html(lang="es")
    +head
        style.
            .ex2 .simb{
                max-width: 100px;
                width: 100%;
                margin-bottom: 5px;
            }
            .ex2 .inputbox input{
                border: 2px solid #6CB743;
                font-size: 1.4rem;
            }
            .ex3 {
                background: #D9EBD4;
                padding: 10px;
                border-radius: 10px;
            }
            .ex3 img {
                max-width: 50px;
            }
            .ex3 .numbers {
                margin: 0 10px;
            }
            .ex3 input {
                max-width: 100px;
                font-size: 1.6rem;
            }
            .ex3 .inputbox {
                background: #E7F3E4;
                margin: 4px;
                border-radius: 10px;
                padding: 10px;
            }
            .ex3 .inputbox .inp_example .numbers {
                color: var(--sec) !important;
                margin: 0;
                border: 2px solid var(--clear);
                border-radius: 10px;
            }

    body
        #app.container.my-5.animate__animated.animate__fadeIn.animate__delay-1s
            h1 #{title}
            if subtitle.length>1
                h2 #{subtitle}

            .instruccion.mt-5 Cuenta los elementos de cada colección y escríbelo en los recuadros superiores. Después súmalos y escribe el total.

            .row.mt-3.ex2.justify-content-center.align-items-end
                .col-md-4.text-center
                    img(src="aimg/1a.png").img-fluid
                    inputbox(v-model="r[0]" :ref="refCount()" @isright="right++" :answer="12" type="number" placeh="#")
                .col-md-1.text-center: img(src="aimg/plus.png").img-fluid.simb
                .col-md-4.text-center
                    img(src="aimg/1b.png").img-fluid
                    inputbox(v-model="r[1]" :ref="refCount()" @isright="right++" :answer="20" type="number" placeh="#")
                .col-md-1.text-center: img(src="aimg/equal.png").img-fluid.simb
                .col-md-2.text-center
                    inputbox(v-model="r[2]" :ref="refCount()" @isright="right++" :answer="32" type="number" placeh="#")

            .instruccion.mt-5 Observa el precio de los artículos deportivos y escribe el resultado de cada suma. Observa el ejemplo.
            .row: .col-12: img(src="aimg/2a.png").w-100
            .row.mt-3.ex3
                .col-md-6
                    inputbox(:example="true" :answer="100" type="number" placeh="#")
                        template(v-slot:before="")
                            img(src="aimg/basket.png").img-fluid
                            numbers +
                            img(src="aimg/futbol.png").img-fluid
                            numbers =
                            numbers(c=2) $
                .col-md-6
                    inputbox(v-model="r[3]" :ref="refCount()" @isright="right++" :answer="60" type="number" placeh="#")
                        template(v-slot:before="")
                            img(src="aimg/tennis.png").img-fluid
                            numbers +
                            img(src="aimg/raqueta.png").img-fluid
                            numbers =
                            numbers(c=2) $
                .col-md-6
                    inputbox(v-model="r[4]" :ref="refCount()" @isright="right++" :answer="60" type="number" placeh="#")
                        template(v-slot:before="")
                            img(src="aimg/basket.png").img-fluid
                            numbers +
                            img(src="aimg/basket.png").img-fluid
                            numbers =
                            numbers(c=2) $
                .col-md-6
                    inputbox(v-model="r[5]" :ref="refCount()" @isright="right++" :answer="30" type="number" placeh="#")
                        template(v-slot:before="")
                            img(src="aimg/volley.png").img-fluid
                            numbers +
                            img(src="aimg/tennis.png").img-fluid
                            numbers =
                            numbers(c=2) $
                .col-md-6
                    inputbox(v-model="r[6]" :ref="refCount()" @isright="right++" :answer="45" type="number" placeh="#")
                        template(v-slot:before="")
                            img(src="aimg/guante.png").img-fluid
                            numbers +
                            img(src="aimg/base.png").img-fluid
                            numbers =
                            numbers(c=2) $
                .col-md-6
                    inputbox(v-model="r[7]" :ref="refCount()" @isright="right++" :answer="90" type="number" placeh="#")
                        template(v-slot:before="")
                            img(src="aimg/guante.png").img-fluid
                            numbers +
                            img(src="aimg/raqueta.png").img-fluid
                            numbers =
                            numbers(c=2) $




            finalize(@evaluate="finalizar" @reset="reset" :resultado="resultado" :right="right" :total="total")
