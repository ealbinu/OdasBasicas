<!DOCTYPE html>
html(lang="es")
    +head
        style.
            .pan {
                background: #FEF6D8;
                padding: 5px;
                border-radius: 10px;
                box-shadow: 4px 4px 0 #CBA47C;
                margin-bottom: 30px;
            }
            .pan > .inputbox input {
                font-size: 1.2rem;
                padding: 1px;
                max-width: 80px;
                border-color: #CBA47C;
                border-radius: 4px;
                margin-left: 2px;
            }
            .pan > .inputbox > .numbers {
                font-size: 1.6rem;
                color: #CBA47C;
                margin-left: 6px;
            }
            .pan .row.head {
                margin: 0;
                background: #CBA47C;
                line-height: 1;
                padding: 10px 0;
                font-size: 0.7rem;
                font-weight: bold;
            }
            .pan .row.body {
                margin: 0;
            }
            .pan .row.body > div {
                border: 1px solid #CBA47C;
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
                min-height: 40px;
                padding: 0;
            }
            .pan .row.body > div .inputbox {
                flex-grow: 1;
                min-height: 100%;
                background: #fff;
            }
            .pan .row.body > div .inputbox input {
                border-radius: 0;
                font-size: 1.2rem;
                padding: 0;
                border: none;
            }

    body
        #app.container.my-5.animate__animated.animate__fadeIn.animate__delay-1s
            h1 #{title}
            if subtitle.length>1
                h2 #{subtitle}

