include ../../assets/pug/_head
include ../../assets/pug/_scripts

- title = 'Convierto las unidades cuadradas'
- subtitle = 'Unidades de superficie / Unidades agrarias'

<!DOCTYPE html>
html(lang="es")
    +head
        style.
            .tab1 .col,
            .tab2 .col,
            .tab1 .col-2,
            .tab2 .col-2 {
                border: 2px solid #f0f0f0;
                border-radius: 10px;
                display: flex;
                justify-content: center;
                align-items: center;
                padding: 0;
                min-width: 100px;
            }
            .tab1 .col-2{
                background: #DDEED3;
            }
            .tab2 .col-2 {
                background: #F8D1B4;
            }
            .tab1 .col-2 .numbers,
            .tab2 .col-2 .numbers {
                font-size: 1.3rem;
            }
            .tab1 .inputbox input,
            .tab2 .inputbox input {
                font-size: 1.2rem;
                padding: 0;
                border-radius: 4px;
            }
            .tab1 .inputbox .numbers,
            .tab2 .inputbox .numbers {
                font-size: 1.2rem;
                color: var(--main);
            }

            .ex2 .inputbox {
                background: #f5f5f5;
                padding: 10px;
                border-radius: 10px;
                font-size: 1.2rem;
                margin: 10px;
                border: 2px solid #00AEB5;
                box-shadow: 4px 4px 0 #C7EBED;
            }
            .ex2 .inputbox input {
                max-width: 120px;
                padding: 0;
                border-radius: 4px;
                margin: 0 4px;
                font-size: 1.2rem;
            }


    body
        #app.container.my-5.animate__animated.animate__fadeIn.animate__delay-1s
            h1 #{title}
            if subtitle.length>1
                h2 #{subtitle}

            .instruccion.mt-5 Completa la siguiente tabla con los n√∫meros que faltan. Observa el ejemplo.

            .row.mt-3.ex1.centerrow
                .col-md-3: img(src="aimg/a1.png").img-fluid
                .col-md
                    .tab1
                        .row.flex-wrap
                            .col-2: numbers m<sup>2</sup>
                            .col 2 000 000
                            .col 4 000 000
                            .col: inputbox(v-model="r[0]" :ref="refCount()" @isright="right++" :answer="10000000" type="number" placeh="#")
                            .col 20 000 000
                            .col: inputbox(v-model="r[1]" :ref="refCount()" @isright="right++" :answer="45000000" type="number" placeh="#")
                        .row.flex-wrap.mt-3
                            .col-2: numbers km<sup>2</sup> 
                            .col: inputbox(:answer="2" type="number" placeh="#" example)
                            .col 4
                            .col 10
                            .col 20
                            .col 45
                    .tab2.mt-5
                        .row.flex-wrap
                            .col-2: numbers mm<sup>2</sup>
                            .col: inputbox(v-model="r[2]" :ref="refCount()" @isright="right++" :answer="5000" type="number" placeh="#")
                            .col 1 000
                            .col: inputbox(v-model="r[3]" :ref="refCount()" @isright="right++" :answer="2500" type="number" placeh="#")
                            .col 10 000
                            .col 14 000
                        .row.flex-wrap.mt-3
                            .col-2: numbers cm<sup>2</sup> 
                            .col 50
                            .col: inputbox(v-model="r[4]" :ref="refCount()" @isright="right++" :answer="10" type="number" placeh="#")
                            .col 25
                            .col 100
                            .col: inputbox(v-model="r[5]" :ref="refCount()" @isright="right++" :answer="140" type="number" placeh="#")
                    
            

            .instruccion.mt-5 Completa las siguientes conversiones con las unidades cuadradas que se indican.
            
            .row.mt-3.ex2
                .col-md-6
                    inputbox(v-model="r[6]" :ref="refCount()" @isright="right++" :answer=".285" type="number" placeh="#")
                        template(v-slot:before="") 28.5 dm#[sup 2] =  
                        template(v-slot:after="") m#[sup 2]
                .col-md-6
                    inputbox(v-model="r[7]" :ref="refCount()" @isright="right++" :answer="1000" type="number" placeh="#")
                        template(v-slot:before="") 10 dam#[sup 2] = 
                        template(v-slot:after="") m#[sup 2]
                .col-md-6
                    inputbox(v-model="r[8]" :ref="refCount()" @isright="right++" :answer="120000" type="number" placeh="#")
                        template(v-slot:before="") 12 ha =  
                        template(v-slot:after="") m#[sup 2]
                .col-md-6
                    inputbox(v-model="r[9]" :ref="refCount()" @isright="right++" :answer="1900" type="number" placeh="#")
                        template(v-slot:before="") 19 km#[sup 2] =  
                        template(v-slot:after="") Hm#[sup 2]
                .col-md-6
                    inputbox(v-model="r[10]" :ref="refCount()" @isright="right++" :answer="0.025" type="number" placeh="#")
                        template(v-slot:before="") 250 mm#[sup 2] =  
                        template(v-slot:after="") dm#[sup 2]
                .col-md-6
                    inputbox(v-model="r[11]" :ref="refCount()" @isright="right++" :answer="5" type="number" placeh="#")
                        template(v-slot:before="") 500 cm#[sup 2] =  
                        template(v-slot:after="") dm#[sup 2]



            finalize(@evaluate="finalizar" @reset="reset" :resultado="resultado" :right="right" :total="total")
