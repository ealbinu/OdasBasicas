include ../../assets/pug/_head
include ../../assets/pug/_scripts

- title = 'Determino el área'
- subtitle = 'El romboide / el rombo'

<!DOCTYPE html>
html(lang="es")
    +head
        style.
            img.img-fluid {
                max-width: 280px;
            }
            .opera {
                margin: 0;
                background: #f5f5f5;
                padding: 10px;
                border-radius: 10px 10px 0 0;
                justify-content: center;
                align-items: center;
            }
            .opera .numbers {
                font-size: 1.6rem;
            }
            .opera .inputbox {
                display: inline-block;
                max-width: 60px;
                margin: 0 4px;
            }
            .opera .inputbox input {
                font-size: 1.3rem;
                padding: 0;
            }
            .final {
                width: 100%;
                display: flex;
                justify-content: center;
                align-items: center;
                text-align: center;
                border-radius: 0 0 10px 10px;
            }
            .final.a,
            .final.c {
                background: #E67F59;
            }
            .final.b,
            .final.d {
                background: #0175B0;
            }
            .final .numbers {
                font-size: 1.8rem;
            }

    body
        #app.container.my-5.animate__animated.animate__fadeIn.animate__delay-1s
            h1 #{title}
            if subtitle.length>1
                h2 #{subtitle}

            .instruccion.mt-5 Calcula el área de los siguientes romboides.

            .row.mt-3.ex1
                .col-md-6.mt-5
                    .text-center: img(src="aimg/1a.png").img-fluid
                    .row.opera
                        numbers A =
                        inputbox(v-model="r[0]" :ref="refCount()" @isright="right++" :answer="8" type="number" placeh="#")
                        numbers(c=1) x
                        inputbox(v-model="r[1]" :ref="refCount()" @isright="right++" :answer="3" type="number" placeh="#")
                        numbers(c=1) =
                        inputbox(v-model="r[2]" :ref="refCount()" @isright="right++" :answer="24" type="number" placeh="#")
                    .final.a: numbers(c=2) A = {{r[2]}} cm#[sup 2]
                .col-md-6.mt-5
                    .text-center: img(src="aimg/1b.png").img-fluid
                    .row.opera
                        numbers A =
                        inputbox(v-model="r[3]" :ref="refCount()" @isright="right++" :answer="4" type="number" placeh="#")
                        numbers(c=1) x
                        inputbox(v-model="r[4]" :ref="refCount()" @isright="right++" :answer="7" type="number" placeh="#")
                        numbers(c=1) =
                        inputbox(v-model="r[5]" :ref="refCount()" @isright="right++" :answer="28" type="number" placeh="#")
                    .final.b: numbers(c=4) A = {{r[5]}} cm#[sup 2]
                .col-md-6.mt-5
                    .text-center: img(src="aimg/1c.png").img-fluid
                    .row.opera
                        numbers A =
                        inputbox(v-model="r[6]" :ref="refCount()" @isright="right++" :answer="5" type="number" placeh="#")
                        numbers(c=1) x
                        inputbox(v-model="r[7]" :ref="refCount()" @isright="right++" :answer="4" type="number" placeh="#")
                        numbers(c=1) =
                        inputbox(v-model="r[8]" :ref="refCount()" @isright="right++" :answer="20" type="number" placeh="#")
                    .final.c: numbers(c=2) A = {{r[8]}} cm#[sup 2]
                .col-md-6.mt-5
                    .text-center: img(src="aimg/1d.png").img-fluid
                    .row.opera
                        numbers A =
                        inputbox(v-model="r[9]" :ref="refCount()" @isright="right++" :answer="5" type="number" placeh="#")
                        numbers(c=1) x
                        inputbox(v-model="r[10]" :ref="refCount()" @isright="right++" :answer="6" type="number" placeh="#")
                        numbers(c=1) =
                        inputbox(v-model="r[11]" :ref="refCount()" @isright="right++" :answer="30" type="number" placeh="#")
                    .final.d: numbers(c=4) A = {{r[11]}} cm#[sup 2]





            finalize(@evaluate="finalizar" @reset="reset" :resultado="resultado" :right="right" :total="total")
