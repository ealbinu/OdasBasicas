include ../../assets/pug/_head
include ../../assets/pug/_scripts
include ../../assets/pug/_parrafosinput

- title = 'Conozco cómo se transfiere el calor'
- subtitle = 'La conducción del calor y su aprovechamiento'
 

<!DOCTYPE html>
html(lang="es")
    +head
        style.
            .recuadropalabras {
                background: #DDF0EE;
            }
            .recuadropalabras strong {
                background: transparent;
                color: #00AEB5;
            }
            .parrafoinputs {
                border: 2px solid #0083BF;
                margin-bottom: 20px;
            }
            .parrafoinputs strong {
                color: #0083BF;
            }
            .ex2 {
                text-align: center;
            }
            .ex2 img {
                max-width: 60%;
            }
            .ex2 .choose {
                border: 4px solid #f5f5f5;
            }
            .ex2 .choose .options {
                margin: 0;
                padding: 0;
            }
            .ex2 .choose .options > div {
                border: none;
                background: #f5f5f5;
                padding: 6px;
                border-radius: 6px;
            }
            .ex2 .choose .options > div.active {
                background: var(--main);
                color: #fff;
            }


    body
        #app.container.my-5.animate__animated.animate__fadeIn.animate__delay-1s
            h1 #{title}
            if subtitle.length>1
                h2 #{subtitle}

            .instruccion.mt-5 Completa los siguientes enunciados con ayuda de las palabras del recuadro.

            recuadropalabras(:palabras="['temperatura','convección','calor','calorífica','conducción','química']")
            .row.mt-3.ex1
                .col-12
                    
                    +parrafoinputs(['<strong>1.</strong> La energía ', ['química',0], ' de un cerillo se convierte en luz y calor mientras se quema.'])
                    
                    +parrafoinputs(['<strong>2.</strong> Se le llama energía ', ['calorífica',1], ' al proceso de liberación de energía en forma de calor.'])
                    
                    +parrafoinputs(['<strong>3.</strong> La ', ['conducción',2], ' consiste en la transferencia de calor entre dos puntos de un cuerpo que se encuentran a diferente temperatura.'])
                    
                    +parrafoinputs(['<strong>4.</strong> La ', ['convección',3], ' es el flujo de calor mediante corrientes dentro de un fluido ya sea líquido o gaseoso.'])
                    
                    +parrafoinputs(['<strong>5.</strong> En la conducción se transfiere el ', ['calor',4], ' del cuerpo caliente al cuerpo frío, y durante la transferencia de calor, la ', ['temperatura', 5], ' del cuerpo frío aumenta hasta que obtiene la misma temperatura del cuerpo caliente.'])
            

            .instruccion.mt-5 Selecciona el tipo de transferencia de calor que se representa en cada ilustración.

            .row.mt-3.ex2.flex-wrap
                .col-md-6
                    choose(v-model="r[6]" :ref="refCount()" text="<img src=aimg/b1.png>" :options="['Convección.', 'Conducción.']" @isright="right++" :answer-num="0")
                .col-md-6
                    choose(v-model="r[7]" :ref="refCount()" text="<img src=aimg/b2.png>" :options="['Convección.', 'Conducción.']" @isright="right++" :answer-num="1")
                .col-md-6
                    choose(v-model="r[8]" :ref="refCount()" text="<img src=aimg/b3.png>" :options="['Convección.', 'Conducción.']" @isright="right++" :answer-num="1")
                .col-md-6
                    choose(v-model="r[9]" :ref="refCount()" text="<img src=aimg/b4.png>" :options="['Convección.', 'Conducción.']" @isright="right++" :answer-num="1")
                .col-md-6
                    choose(v-model="r[10]" :ref="refCount()" text="<img src=aimg/b5.png>" :options="['Convección.', 'Conducción.']" @isright="right++" :answer-num="0")
                .col-md-6
                    choose(v-model="r[11]" :ref="refCount()" text="<img src=aimg/b6.png>" :options="['Convección.', 'Conducción.']" @isright="right++" :answer-num="1")
                




            finalize(@evaluate="finalizar" @reset="reset" :resultado="resultado" :right="right" :total="total")
