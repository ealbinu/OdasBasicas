mixin parrafo(indexvmodel, campos, initclass)
    - var vmcount = indexvmodel
    .parrafoinputs(class=initclass)
        each field in campos
            if typeof field === 'object'
                inputbox(v-model="r["+(vmcount)+"]" :ref="refCount()" @isright="right++" answer=field[0] type="text" placeh="-")
                - vmcount++
            else 
                span !{field}


//
    - var arr = []
    - arr.push('El ')
    - arr.push(['comercio'])
    +parrafo(0, arr)