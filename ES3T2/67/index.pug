include ../../assets/pug/_head
include ../../assets/pug/_scripts

- title = 'Analizo notas periodísticas'
- subtitle = 'Resumen y paráfrasis'

<!DOCTYPE html>
html(lang="es")
    +head
        style.
            .bg1 {
                bakground-size: cover;
                background-image: url("aimg/bg1.png");
                border-radius: 0 10px 10px;
                display: flex;
                flex-direction: column;
                justify-content: center;
            }
            .bg2 {
                background-image: url("aimg/bg2.png");
                border-radius: 0 10px 10px;
                display: flex;
                flex-direction: column;
                justify-content: center;
            }
            .choose {
                display: flex;
                background: #fff;
                justify-content: center;
                align-items: center;
            }
            .choose .label {
                margin-right: auto;
                width: 70%;
            }
            .choose .options {
                width: 30%;
                box-sizing: border-box;
                margin: 0;
            }
            .choose .options div {
                border: none;
                background: #f5f5f5;
                padding: 2px;
                border-radius: 8px;
                border: 6px solid #f5f5f5;
                box-shadow: 4px 4px 0 rgba(0, 0, 0, 0.1);
            }
            .choose .options div img {
                width: 26px;
                height: 26px;
            }
            .choose .options div.active {
                border-radius: 50%;
                border: 6px solid var(--main);
            }

            
    body
        #app.container.my-5.animate__animated.animate__fadeIn.animate__delay-1s
            h1 #{title}
            if subtitle.length>1
                h2 #{subtitle}

            .instruccion.mt-5 Marca así <checkmark></checkmark> los recursos renovables y así <markex></markex> los no renovables.

            .row.mt-3.ex1.centerrrow
                .col-md-3: img(src="aimg/a1.png").img-fluid.im1
                .col-md.bg1
                    choose(v-model="r[0]" :ref="refCount()" text="El perro persigue al gato." :options="['<img src=../../assets/aimg/check.svg>', '<img src=../../assets/aimg/markex.svg>']" @isright="right++" :answer-num="1")
                    choose(v-model="r[1]" :ref="refCount()" text="El gato es perseguido por el perro." :options="['<img src=../../assets/aimg/check.svg>', '<img src=../../assets/aimg/markex.svg>']" @isright="right++" :answer-num="0")
            
            .row.mt-3.ex1.centerrrow
                .col-md.bg2
                    choose(v-model="r[2]" :ref="refCount()" text="Carmen fue visitada por Samanta." :options="['<img src=../../assets/aimg/check.svg>', '<img src=../../assets/aimg/markex.svg>']" @isright="right++" :answer-num="0")
                    choose(v-model="r[3]" :ref="refCount()" text="Samanta visitó a Carmen." :options="['<img src=../../assets/aimg/check.svg>', '<img src=../../assets/aimg/markex.svg>']" @isright="right++" :answer-num="1")
                .col-md-3: img(src="aimg/a2.png").img-fluid.im2






            finalize(@evaluate="finalizar" @reset="reset" :resultado="resultado" :right="right" :total="total")
