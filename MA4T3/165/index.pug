    +head
        style.
            .frac {
                text-align: center;
                font-size: 1.4rem;
            }
            .frac hr {
                margin: 5px auto;
                border: none;
                border-top: 4px solid #fff;
                min-width: 20px;
                max-width: 60px;
            }
            .ex1 .frac hr{ border-top: 4px solid #fff; }
            .ex2 .frac hr{ border-top: 4px solid var(--clear); }
            .frac .inputbox input {
                border-radius: 6px;
                padding: 0 2px;
                font-size: 1.4rem;
                max-width: 50px;
                margin: 0 2px;
            }
            .frac .inputbox .numbers{
                font-size: 1.3rem;
            }
            @media (max-width: 680px){
                .frac{
                    font-size: 1rem;
                }
                .frac .inputbox input{
                    margin: 0;
                    font-size: 1rem;
                    padding: 0;
                }
            }
            .brick{ max-height: 24px; }
            .ex1 {
                background: linear-gradient(#0078B2, #7DCBE4);
                color: #fff;
                border-radius: 10px;
                padding: 20px 0;
            }
            .ex1 .numbers {
                color: #fff;
            }
            .ex1 .area {
                background: rgba(0, 0, 0, 0.1);
                border: 2px solid #fff;
                padding: 10px;
                border-radius: 10px;
            }
            .ex2 .tub .frac {
                background: linear-gradient(to left, #009542, #006129);
                margin: 0 8px;
                border-left: 8px solid #fff;
            }
            .ex2 .tub .frac div:first-child {
                margin-top: 10px;
            }
            .ex2 .tub .frac div:last-child {
                padding-bottom: 10px;
                margin-bottom: -1px;
            }
            .ex2 .tub .frac:before {
                content: "";
                display: block;
                background: linear-gradient(to left, #00c542, #006129);
                box-shadow: 0 4px 0 rgba(0, 0, 0, 0.05);
                margin-left: -8px;
                margin-right: -8px;
                height: 20px;
                border-radius: 3px;
            }
            .ex2 .tub .text-center {
                color: var(--sec);
                border: 2px solid #fff;
                border-radius: 6px;
                padding: 4px;
                font-size: 0.8rem;
                background: var(--pastel2);
            }




