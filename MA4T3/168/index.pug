include ../../assets/pug/_head
include ../../assets/pug/_scripts

- title = 'Conozco los múltiplos de 10'
- subtitle = '¿Cuánto le falta? / Los más cercanos / De frutas y verduras'

<!DOCTYPE html>
html(lang="es")
    +head
        style.
            .parrafoinputs .inputbox input{
                max-width: 90px;
            }
    body
        #app.container.my-5.animate__animated.animate__fadeIn.animate__delay-1s
            h1 #{title}
            if subtitle.length>1
                h2 #{subtitle}

            .instruccion.mt-5 Completa las siguientes operaciones.

            .row.mt-3.ex1
                .col-md-6(v-for="(i, index) in tempsobj.a").mt-2
                    .c2.parrafoinputs.text-center
                        inputbox(v-model="d['a'+index]" :ref="refCount()" @isright="right++"  type="number" placeh="#" :answer="i[0]-i[1]")
                            template(v-slot:before="") {{i[0]}} - 
                            template(v-slot:after="") = {{i[1]}}
            
            .instruccion.mt-5 Completa las siguientes sumas para obtener el resultado indicado.

            .row.mt-3.ex1
                .col-md-6(v-for="(i, index) in tempsobj.b").mt-2
                    .c4.parrafoinputs.text-center
                        inputbox(v-model="d['b'+index]" :ref="refCount()" @isright="right++"  type="number" placeh="#" :answer="i[2]-(i[0]+i[1])")
                            template(v-slot:before="") {{i[0]}} + {{i[1]}} + 
                            template(v-slot:after="") = {{i[2]}}
            





            finalize(@evaluate="finalizar" @reset="reset" :resultado="resultado" :right="right" :total="total")
        +scripts
            script.
                app.$set(app.tempsobj, 'a', [
                    [250, 216],
                    [190, 178],
                    [410,391],
                    [520,502],
                    [90,76],
                    [50,26],
                    [150,25],
                    [350,200],
                    [550,440],
                    [110,40],
                    [60,26],
                    [200,191],
                ])
                app.$set(app.tempsobj, 'b', [
                    [100,20,160],
                    [200,50,300],
                    [600,20,650],
                    [80,30,140],
                    [90,60,500],
                    [250,150,900],
                ])