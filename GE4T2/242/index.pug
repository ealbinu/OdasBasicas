include ../../assets/pug/_head
include ../../assets/pug/_scripts

- title = 'Identifico las actividades económicas'
- subtitle = 'Diversas actividades, diversos productos'

<!DOCTYPE html>
html(lang="es")
    +head
        style.
            .itm {
                padding: 10px;
                background: #f5f5f5;
                margin: 10px;
                border-radius: 10px;
                box-shadow: 6px 6px 0 rgba(0, 0, 0, 0.1);
            }
            .itm img {
                border-radius: 10px;
            }
            .itm .inputbox {
                margin-top: 20px;
            }
            .itm .inputbox input {
                font-size: 1.2rem;
            }
            .itm:nth-child(odd) {
                background: #FFeeaF;
            }

    body
        #app.container.my-5.animate__animated.animate__fadeIn.animate__delay-1s
            h1 #{title}
            if subtitle.length>1
                h2 #{subtitle}

            .instruccion.mt-5 Escribe #[strong agrícola], #[strong pesquero], #[strong forestal] o #[strong ganadero] debajo de cada imagen, de acuerdo al tipo de actividad productiva que corresponda.

            .row.mt-3.ex1
                .col-md-6: .itm
                    img(src="aimg/a1.png").img-fluid
                    inputbox(v-model="r[0]" :ref="refCount()" @isright="right++" answer="Agrícola" type="text" placeh="-")
                .col-md-6: .itm
                    img(src="aimg/a2.png").img-fluid
                    inputbox(v-model="r[1]" :ref="refCount()" @isright="right++" answer="Ganadero" type="text" placeh="-")
                .col-md-6: .itm
                    img(src="aimg/a3.png").img-fluid
                    inputbox(v-model="r[2]" :ref="refCount()" @isright="right++" answer="Pesquero" type="text" placeh="-")
                .col-md-6: .itm
                    img(src="aimg/a4.png").img-fluid
                    inputbox(v-model="r[3]" :ref="refCount()" @isright="right++" answer="Forestal" type="text" placeh="-")
            





            finalize(@evaluate="finalizar" @reset="reset" :resultado="resultado" :right="right" :total="total")
