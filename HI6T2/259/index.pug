include ../../assets/pug/_head
include ../../assets/pug/_scripts

- title = 'Analizamos a los bárbaros'
- subtitle = 'Las invasiones bárbaras y la disolución del Imperio romano'

<!DOCTYPE html>
html(lang="es")
    +head
        style.
            .inputbox {
                justify-content: flex-start;
                background: #f5f5f5;
                padding: 10px;
                border-radius: 10px;
                margin-bottom: 6px;
            }
            .inputbox input {
                max-width: 100px;
                font-size: 1.4rem;
                box-shadow: 4px 4px 0 #F0A85F;
                border-color: #F0A85F;
                margin-right: 20px;
            }
            .inputbox .txt {
                font-size: 1.2rem;
            }
            @media (max-width: 680px) {
                .inputbox input {
                    font-size: 1rem;
                    padding: 1px;
                }
                .inputbox .txt {
                    font-size: 1rem;
                }
            }

    body
        #app.container.my-5.animate__animated.animate__fadeIn.animate__delay-1s
            h1 #{title}
            if subtitle.length>1
                h2 #{subtitle}

            .instruccion.mt-5 Escribe en cada cuadro #[strong V] si se trata de información verdadera o #[strong F] si es falsa. Consulta las páginas 86 y 87 de tu libro de texto SEP.

            .row.mt-3.ex1
                .col-12(v-for="(i, index) in tempsobj.a")
                    inputbox(v-model="r[index]" :ref="refCount()" @isright="right++" :answer="i.v" type="text" placeh="V o F")
                        template(v-slot:after=""): div.txt {{i.t}}
            
            .row: .col-12: img(src="aimg/a1.png").w-100
                    
            





            finalize(@evaluate="finalizar" @reset="reset" :resultado="resultado" :right="right" :total="total")
        +scripts
            script.
                app.$set(app.tempsobj, 'a', [
                    {v:'f', t:'El Imperio romano mantenía su unidad gracias a que se llevaba bien con los pueblos conquistados.'},
                    {v:'v', t:'Los germanos estaban divididos a su vez en visigodos, ostrogodos, vándalos, lombardos, anglos, francos y sajones.'},
                    {v:'v', t:'Carlomagno fue proclamado emperador en el año 800 d. C., y dominó los antiguos territorios romanos.'},
                    {v:'f', t:'Los francos fueron el grupo germano que dominó el área que hoy conocemos como España.'},
                    {v:'v', t:'En el año 476 d. C. los bárbaros derrocaron al emperador Rómulo Augusto.'},
                    {v:'f', t:'El idioma inglés pertenece a las lenguas romances.'},
                    {v:'v', t:'La disminución de la disciplina de su ejército ocasionó que el gobierno romano perdiera poder.'},
                    {v:'f', t:'Los pueblos germanos estaban conformados por los alemanes, los griegos y los ingleses.'},
                    {v:'f', t:'Carlomagno fue proclamado emperador bárbaro.'},
                    {v:'v', t:'Los vikingos procedían de Escandinavia, eran excelentes navegantes y constructores de barcos.'},
                ])