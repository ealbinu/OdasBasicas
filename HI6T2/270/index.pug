include ../../assets/pug/_head
include ../../assets/pug/_scripts
include ../../assets/pug/_parrafosinput

- title = 'Estudio los periodos de Mesoamérica'
- subtitle = 'Mesoamérica, espacio cultural'

<!DOCTYPE html>
html(lang="es")
    +head
        style.
            .ex2 .check {
                background: #f5f5f5;
            }
            .ex2 .check .label.checktext {
                text-align: center;
                width: 100%;
            }
            .ex2 .check .checkbox {
                display: none;
            }
            .ex2 .check.activecheck {
                background: var(--clear);
            }
            .recuadropalabras {
                background: #E9F4F3;
            }
            .recuadropalabras strong {
                background: #87D4D8;
            }
            .parrafoinputs{
                line-height: 2;
            }


    body
        #app.container.my-5.animate__animated.animate__fadeIn.animate__delay-1s
            h1 #{title}
            if subtitle.length>1
                h2 #{subtitle}

            .instruccion.mt-5 Marca así <checkmark></checkmark> las características de la tierra en Mesoamérica.

            .row.mt-3.ex1
                .col-md-4(v-for="(i, index) in [{val: false, text: 'Poco fértil'}, {val:true, text:'Húmeda y fértil.'}, {val:false, text:'Infértil.'}]")
                    check(v-model="r[index]" :ref="refCount()"  @isright="right++" :answer="i.val" :text="i.text")

            .instruccion.mt-5 Colorea los alimentos que se consumían en Mesoamérica.

            .row.mt-3.ex2.centerrow
                .col-md-4(v-for="(i, index) in tempsobj.ex2")
                    check(v-model="r[index+3]" :ref="refCount()"  @isright="right++" :answer="i.val" :text="i.text")

            
            .instruccion.mt-5 Completa el siguiente texto con las palabras del recuadro.
            recuadropalabras(:palabras="['Veracruz y Tabasco','Preclásico','ceremonias y rituales','obras de riego','Olmeca','escritura','canales','2500','cabezas']")
            - var arra = []
            - arra.push('El')
            - arra.push(['Preclásico',12])
            - arra.push(' tuvo una duración de 2 700 años, aproximadamente. Este periodo empezó')
            - arra.push([2500,13])
            - arra.push(' años a. C. y finalizó en el año 200 d. C.; la civilización más emblemática del periodo es la')
            - arra.push(['Olmeca',14])
            - arra.push(', que ocupó los estados de ')
            - arra.push(['Veracruz y Tabasco',15])
            - arra.push('. Los asentamientos más importantes fueron en San Lorenzo y La Venta. Esta civilización se caracterizó por la construcción de edificios para ')
            - arra.push(['ceremonias y rituales',16])
            - arra.push('; su arte era de un estilo único al hacer esculturas de enormes ')
            - arra.push(['cabezas',17])
            - arra.push(', además elaboraron calendarios y un sistema de ')
            - arra.push(['escritura',18])
            - arra.push('. Todo lo anterior les ayudó para favorecer la producción agrícola. Luego construyeron ')
            - arra.push(['obras de riego',19])
            - arra.push(' represas, ')
            - arra.push(['canales',11])
            - arra.push(' y terrazas.')
            .mt-3: +parrafoinputs(arra)



            finalize(@evaluate="finalizar" @reset="reset" :resultado="resultado" :right="right" :total="total")
        +scripts
            script.
                app.$set(app.tempsobj, 'ex2', [
                    {val: false, text:'Piña'},
                    {val: true, text:'Frijol'},
                    {val: true, text:'Calabaza'},
                    {val: true, text:'Aguacate'},
                    {val: true, text:'Maíz'},
                    {val: true, text:'Chile'},
                    {val: false, text:'Trigo'},
                    {val: true, text:'Cacao'},
                ])