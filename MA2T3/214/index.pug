include ../../assets/pug/_head
include ../../assets/pug/_scripts

- title = 'Descompongo cantidades'
- subtitle = '¿Quién tiene más?'

<!DOCTYPE html>
html(lang="es")
    +head
        style.
            .boxy {
                text-align: center;
                margin-bottom: 30px;
            }
            .boxy .numbers {
                color: #6A4287;
                background: #FDE8CF;
                border-radius: 6px;
                margin-bottom: 10px;
            }
            .boxy .row {
                margin-bottom: 6px;
            }
            .boxy .row .inputbox {
                width: 33%;
                flex-direction: column;
                color: #fff;
                font-weight: bold;
                border-radius: 6px;
            }
            .boxy .row .inputbox:nth-child(1) {
                background: #EFA92C;
            }
            .boxy .row .inputbox:nth-child(2) {
                background: #D8222A;
            }
            .boxy .row .inputbox:nth-child(3) {
                background: #0083BF;
            }
            .boxy .inputbox input {
                font-size: 1rem;
                padding: 4px 0;
                border-radius: 4px;
            }
            .ex2 .inputbox input {
                font-size: 1rem;
                padding: 4px 0;
                border-radius: 4px;
            }


    body
        #app.container.my-5.animate__animated.animate__fadeIn.animate__delay-1s
            h1 #{title}
            if subtitle.length>1
                h2 #{subtitle}

            .instruccion.mt-5 Completa las tablas y escribe el nombre de cada cantidad.

            .row.mt-3.ex1
                .col-md-6.boxy
                    numbers(c=2) 364
                    .row
                        inputbox(v-model="r[0]" :ref="refCount()" @isright="right++" :answer="3" type="number" placeh="#"): template(v-slot:before="") Centenas
                        inputbox(v-model="r[1]" :ref="refCount()" @isright="right++" :answer="6" type="number" placeh="#"): template(v-slot:before="") Decenas
                        inputbox(v-model="r[2]" :ref="refCount()" @isright="right++" :answer="4" type="number" placeh="#"): template(v-slot:before="") Unidades
                    inputbox(v-model="r[3]" :ref="refCount()" @isright="right++" answer="Trescientos sesenta y cuatro" type="text" placeh="Nombre")
                .col-md-6.boxy
                    numbers(c=2) 54
                    .row
                        inputbox(v-model="r[4]" :ref="refCount()" @isright="right++" :answer="0" type="number" placeh="#"): template(v-slot:before="") Centenas
                        inputbox(v-model="r[5]" :ref="refCount()" @isright="right++" :answer="5" type="number" placeh="#"): template(v-slot:before="") Decenas
                        inputbox(v-model="r[6]" :ref="refCount()" @isright="right++" :answer="4" type="number" placeh="#"): template(v-slot:before="") Unidades
                    inputbox(v-model="r[7]" :ref="refCount()" @isright="right++" answer="Cincuenta y cuatro" type="text" placeh="Nombre")
                .col-md-6.boxy
                    numbers(c=2) 742
                    .row
                        inputbox(v-model="r[8]" :ref="refCount()" @isright="right++" :answer="7" type="number" placeh="#"): template(v-slot:before="") Centenas
                        inputbox(v-model="r[9]" :ref="refCount()" @isright="right++" :answer="4" type="number" placeh="#"): template(v-slot:before="") Decenas
                        inputbox(v-model="r[10]" :ref="refCount()" @isright="right++" :answer="2" type="number" placeh="#"): template(v-slot:before="") Unidades
                    inputbox(v-model="r[11]" :ref="refCount()" @isright="right++" answer="Setecientos cuarenta y dos" type="text" placeh="Nombre")
                .col-md-6.boxy
                    numbers(c=2) 851
                    .row
                        inputbox(v-model="r[12]" :ref="refCount()" @isright="right++" :answer="8" type="number" placeh="#"): template(v-slot:before="") Centenas
                        inputbox(v-model="r[13]" :ref="refCount()" @isright="right++" :answer="5" type="number" placeh="#"): template(v-slot:before="") Decenas
                        inputbox(v-model="r[14]" :ref="refCount()" @isright="right++" :answer="1" type="number" placeh="#"): template(v-slot:before="") Unidades
                    inputbox(v-model="r[15]" :ref="refCount()" @isright="right++" answer="Ochocientos cincuenta y uno" type="text" placeh="Nombre")
                .col-md-6.boxy
                    numbers(c=2) 23
                    .row
                        inputbox(v-model="r[16]" :ref="refCount()" @isright="right++" :answer="0" type="number" placeh="#"): template(v-slot:before="") Centenas
                        inputbox(v-model="r[17]" :ref="refCount()" @isright="right++" :answer="2" type="number" placeh="#"): template(v-slot:before="") Decenas
                        inputbox(v-model="r[18]" :ref="refCount()" @isright="right++" :answer="3" type="number" placeh="#"): template(v-slot:before="") Unidades
                    inputbox(v-model="r[19]" :ref="refCount()" @isright="right++" answer="Veintitrés" type="text" placeh="Nombre")
                .col-md-6.boxy
                    numbers(c=2) 489
                    .row
                        inputbox(v-model="r[20]" :ref="refCount()" @isright="right++" :answer="4" type="number" placeh="#"): template(v-slot:before="") Centenas
                        inputbox(v-model="r[21]" :ref="refCount()" @isright="right++" :answer="8" type="number" placeh="#"): template(v-slot:before="") Decenas
                        inputbox(v-model="r[22]" :ref="refCount()" @isright="right++" :answer="9" type="number" placeh="#"): template(v-slot:before="") Unidades
                    inputbox(v-model="r[23]" :ref="refCount()" @isright="right++" answer="Cuatrocientos ochenta y nueve" type="text" placeh="Nombre")

            .instruccion.mt-5 Ordena las cantidades anteriores de #[strong menor a mayor].

            .row.mt-3.ex2.no-gutters
                template(v-for="(i, index) in [23,54,364,489,742,851]")
                    .col: inputbox(v-model="r[index+23]" :ref="refCount()" @isright="right++" :answer="i" type="number" placeh="-")
                        template(v-slot:after="" v-if="index == 5") .
                        template(v-slot:after="" v-else) ,
                            

            finalize(@evaluate="finalizar" @reset="reset" :resultado="resultado" :right="right" :total="total")
