include ../../assets/pug/_head
include ../../assets/pug/_scripts

- title = '¿Cuánto me falta?'
- subtitle = 'Cajas de pelotas'

<!DOCTYPE html>
html(lang="es")
    +head
        style.
            .inputbox {
                font-size: 1.2rem;
                background: #f5f5f5;
                margin-bottom: 10px;
                border-radius: 10px;
                padding: 10px;
                box-shadow: 4px 4px 0 rgba(0, 0, 0, 0.1);
            }
            .inputbox input {
                width: 56px;
                font-size: 1.2rem;
                border-radius: 6px;
                padding: 2px;
                margin: 0 4px;
            }
            .bxs:nth-child(4n+1) .inputbox {
                background: var(--pastel1);
            }
            .bxs:nth-child(4n+2) .inputbox {
                background: var(--pastel2);
            }
            .bxs:nth-child(4n+3) .inputbox {
                background: var(--pastel3);
            }
            .bxs:nth-child(4n+4) .inputbox {
                background: var(--pastel4);
            }

    body
        #app.container.my-5.animate__animated.animate__fadeIn.animate__delay-1s
            h1 #{title}
            if subtitle.length>1
                h2 #{subtitle}

            .instruccion.mt-5 Completa las siguientes sumas y restas.

            .row.mt-3.ex1
                .col-md-4(v-for="(i, index) in tempsobj.a").bxs
                    inputbox(v-model="r[index]" :ref="refCount()" @isright="right++" :answer="i[2]" type="number" placeh="#")
                        template(v-slot:before="") {{i[0]}} {{i[1]}}
                        template(v-slot:after="") = {{i[3]}} 
            





            finalize(@evaluate="finalizar" @reset="reset" :resultado="resultado" :right="right" :total="total")
        +scripts
            script.
                app.$set(app.tempsobj, 'a', [
                    [295, '+', 5, 300],
                    [495, '+', 5, 500],
                    [685, '+', 15, 700],
                    
                    [396, '+', 4, 400],
                    [598, '+', 2, 600],
                    [882, '+', 18, 900],
                    
                    [186, '+', 14, 200],
                    [548, '+', 52, 600],
                    [972, '+', 28, 1000],
                    
                    [1000, '-', 600, 400],
                    [1000, '-', 500, 500],
                    [1000, '-', 100, 900],
                    
                    [1000, '-', 200, 800],
                    [1000, '-', 400, 600],
                    [1000, '-', 300, 700],
                    
                ])

                