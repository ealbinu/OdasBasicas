include ../../assets/pug/_head
include ../../assets/pug/_scripts

- title = 'Sé cómo sumar'
- subtitle = 'Trayecto 3. Sumas y restas hasta 1 000. Las canicas'

<!DOCTYPE html>
html(lang="es")
    +head
        style.
            
            .ex2 .inputbox {
                flex-direction: column;
                align-items: flex-end;
                background: #f5f5f5;
                padding: 10px;
                border-radius: 6px;
                margin-bottom: 10px;
                text-align: right;
                font-size: 1.2rem;
            }
            .ex2 .inputbox input {
                font-size: 1.2rem;
                text-align: right;
                margin: 0;
                padding: 2px;
            }
            .ex2 .inputbox hr {
                width: 100%;
                border-top: 2px solid var(--main);
                margin: 4px 0;
            }
            .opes:nth-child(3n+1) .inputbox {
                background: var(--pastel1);
            }
            .opes:nth-child(3n+2) .inputbox {
                background: var(--pastel2);
            }
            .opes:nth-child(3n+3) .inputbox {
                background: var(--pastel3);
            }


    body
        #app.container.my-5.animate__animated.animate__fadeIn.animate__delay-1s
            h1 #{title}
            if subtitle.length>1
                h2 #{subtitle}

            .instruccion.mt-5 Realiza las siguientes sumas.

            .row.mt-3.ex2.justify-content-around
                .col-md-3.col-6(v-for="(i, index) in tempsobj.sumas").text-right.opes
                    inputbox(v-model="r[index]" :ref="refCount()" @isright="right++" :answer="i[2]" type="number" placeh="#")
                        template(v-slot:before="")
                            div {{i[0]}}
                            div + {{i[1]}}
                            hr



            finalize(@evaluate="finalizar" @reset="reset" :resultado="resultado" :right="right" :total="total")
        +scripts
            script.
                app.$set(app.tempsobj, 'sumas', [
                    [421, 238, 659],
                    [644, 314, 958],
                    [362, 523, 885],
                    [129, 540, 669],
                    [531, 347, 878],

                    [324, 219, 543],
                    [831, 162, 993],
                    [298, 210, 508], 
                    [782, 165, 947],
                    [310, 333, 643],
                ])