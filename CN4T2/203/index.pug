include ../../assets/pug/_head
include ../../assets/pug/_scripts

- title = 'Clasifico los materiales'
- subtitle = 'Características de los estados físicos y sus cambios'

<!DOCTYPE html>
html(lang="es")
    +head
        style.
            .card {
                border-radius: 10px;
                box-shadow: 6px 6px 0 rgba(0, 0, 0, 0.1);
            }
            .card.c1 {
                background: #FBABB6;
            }
            .card.c2 {
                background: #AFC2D9;
            }
            .card.c3 {
                background: #F8D2B0;
            }
            .card .numbers {
                text-align: center;
            }
            .opcion {
                text-align: center;
                background: #f5f5f5;
                padding: 10px;
                border-radius: 10px;
                margin-bottom: 10px;
            }
            .opcion .inputbox input {
                font-size: 1.4rem;
                max-width: 120px;
            }
            .opcion img {
                max-width: 120px;
                border-radius: 10px;
                margin-top: 4px;
            }


    body
        #app.container.my-5.animate__animated.animate__fadeIn.animate__delay-1s
            h1 #{title}
            if subtitle.length>1
                h2 #{subtitle}

            .instruccion.mt-5 Relaciona las características con el estado de la materia y los ejemplos correspondientes.

            .row.mt-3.ex1
                .col-sm-4: .card.c1: .card-body
                    numbers(c=1) A.
                    ul
                        li Tienen volumen definido.
                        li Adquieren la forma del recipiente que los contiene.
                        li Fluyen.
                        li No tienen dureza.
                .col-sm-4: .card.c2: .card-body
                    numbers(c=2) B.
                    ul
                        li No tienen volumen definido.
                        li Se expanden o se comprimen en un recipiente.
                        li Se dilatan al aumentar la temperatura.
                        li Tienen elasticidad.
                .col-sm-4: .card.c3: .card-body
                    numbers(c=4) C.
                    ul
                        li Tienen volumen y forma definida.
                        li No se pueden comprimir.
                        li No fluyen.
                        li Se dilatan al aumentar la temperatura.
            
            .row.mt-3.ex1
                .col-sm-4: .opcion
                    inputbox(v-model="r[2]" :ref="refCount()" @isright="right++" answer="C" type="text" placeh="A,B,C")
                    numbers Sólidos
                .col-sm-4: .opcion
                    inputbox(v-model="r[0]" :ref="refCount()" @isright="right++" answer="A" type="text" placeh="A,B,C")
                    numbers Líquidos
                .col-sm-4: .opcion
                    inputbox(v-model="r[1]" :ref="refCount()" @isright="right++" answer="B" type="text" placeh="A,B,C")
                    numbers Gaseosos
                .col-sm-4: .opcion
                    inputbox(v-model="r[6]" :ref="refCount()" @isright="right++" answer="B" type="text" placeh="A,B,C")
                    img(src="aimg/2b.png", alt="")
                .col-sm-4: .opcion
                    inputbox(v-model="r[7]" :ref="refCount()" @isright="right++" answer="C" type="text" placeh="A,B,C")
                    img(src="aimg/3a.png", alt="")
                .col-sm-4: .opcion
                    inputbox(v-model="r[4]" :ref="refCount()" @isright="right++" answer="A" type="text" placeh="A,B,C")
                    img(src="aimg/1b.png", alt="")
                .col-sm-4: .opcion
                    inputbox(v-model="r[5]" :ref="refCount()" @isright="right++" answer="B" type="text" placeh="A,B,C")
                    img(src="aimg/2a.png", alt="")
                .col-sm-4: .opcion
                    inputbox(v-model="r[3]" :ref="refCount()" @isright="right++" answer="A" type="text" placeh="A,B,C")
                    img(src="aimg/1a.png", alt="")
                .col-sm-4: .opcion
                    inputbox(v-model="r[8]" :ref="refCount()" @isright="right++" answer="C" type="text" placeh="A,B,C")
                    img(src="aimg/3b.png", alt="")




            finalize(@evaluate="finalizar" @reset="reset" :resultado="resultado" :right="right" :total="total")
