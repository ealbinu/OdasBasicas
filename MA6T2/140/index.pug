            script.
                app.formatnum = function (num){
                    return numeral(num).format('$0,0.00')
                }
                app.twoD = function(num) {
                    let fixed = 2
                    var re = new RegExp('^-?\\d+(?:\.\\d{0,' + (fixed || -1) + '})?');
                    return num.toString().match(re)[0];
                }
