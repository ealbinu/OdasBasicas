include ../../assets/pug/_head
include ../../assets/pug/_scripts

- title = 'Confirmo lo que aprendí'
- subtitle = ''

<!DOCTYPE html>
html(lang="es")
    +head
        style.
            .frc{
                display: inline-block;
                text-align: center;
                vertical-align: middle;
            }
            .frc hr, .choose .options div hr{
                borde: none;
                border-top: 2px solid var(--sec);
                min-width: 40px;
                margin: 0;
            }
            .blank{
                border-bottom: 2px solid var(--main);
                width: 120px;
                display: inline-block;
            }
            .choose .options div{
                background: #f5f5f5;
                padding: 6px;
                border-bottom: none;
                border-radius: 6px;
            }
            .choose .options div.active{
                border: 2px solid var(--main);
                background: #fff;
                box-shadow: 4px 4px 0 rgba(0,0,0,0.1);
            }
    body
        #app.container.my-5.animate__animated.animate__fadeIn.animate__delay-1s
            h1 #{title}
            if subtitle.length>1
                h2 #{subtitle}

            .instruccion.mt-5 Marca la respuesta correcta.

            .row.mt-3
                .col-12
                    template(v-for="(i, index) in temps")
                        choose(:key="index" v-model="r[index]" :ref="refCount()" :num="(index+1)+'.'" :text="i.p" :options="i.ops" @isright="right++" :answer="i.ops[i.a]")

            

            finalize(@evaluate="finalizar" @reset="reset" :resultado="resultado" :right="right" :total="total")
        +scripts
            script.
                app.$set(app, 'temps', [
                    {
                        p: 'El <div class="blank"></div> tiene 9 aristas, 6 vértices, 3 caras rectangulares y 2 bases triangulares.',
