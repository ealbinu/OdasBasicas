include ../../assets/pug/_head
include ../../assets/pug/_scripts

- title = '¿Qué conviene comprar?'
- subtitle = '¿Cuál es el mejor precio? / ¿Cuál está más concentrado?'

<!DOCTYPE html>
html(lang="es")
    +head
        style.
            .options{
                flex-wrap: wrap;
            }
            .options div{
                margin:10px;
            }
    body
        #app.container.my-5.animate__animated.animate__fadeIn.animate__delay-1s
            h1 #{title}
            if subtitle.length>1
                h2 #{subtitle}

            .instruccion.mt-5 Lee los siguientes problemas y encierra la respuesta correcta.

            .row.mt-3.ex1
                .col-12

                    choose(v-model="r[0]" :ref="refCount()" num="1." text="En una tienda te regalan 3 decenas de dulces si llevas 20 latas de aluminio para reciclar. ¿Cuántos dulces me regalarán si llevo 60 latas?" :options="['90 dulces.', '70 dulces.', '120 dulces.']" @isright="right++" :answer-num="0")
                    choose(v-model="r[1]" :ref="refCount()" num="2." text="En una frutería venden 3 naranjas por $5.00. Si deseo comprar 2 docenas de naranjas, ¿cuánto pagaré en total?" :options="['$50.00', '$40.00', '$60.00']" @isright="right++" :answer-num="1")
                    choose(v-model="r[2]" :ref="refCount()" num="3." text="Si para alimentar a 8 vacas se necesitan 44 kg de pasto, ¿cuántas vacas se pueden alimentar con 110 kg de pasto?" :options="['20 vacas.', '30 vacas.', '40 vacas.']" @isright="right++" :answer-num="0")
                    choose(v-model="r[3]" :ref="refCount()" num="4." text="Marcela vende 10 calcomanías por $5.00. Si Eva tiene $25.00, ¿cuántas calcomanías puede comprar?" :options="['30 calcomanías.', '40 calcomanías.', '50 calcomanías.']" @isright="right++" :answer-num="2")




            finalize(@evaluate="finalizar" @reset="reset" :resultado="resultado" :right="right" :total="total")
