include ../../assets/pug/_head
include ../../assets/pug/_scripts

- title = 'Encuentro una parte de algo'
- subtitle = 'Plan de ahorro'

<!DOCTYPE html>
html(lang="es")
    +head
        style.
            .h4 {
                background: #FDE8CF;
                text-align: center;
                font-size: 1.2rem;
                color: #E9832C;
                padding: 10px;
                border-radius: 10px;
            }
            .ex1 {
                background: #f5f5f5;
                padding: 10px;
                border-radius: 10px;
            }
            .body > div .row {
                padding: 2px;
                display: flex;
                justify-content: center;
                align-items: center;
                font-size: 1.2rem;
            }
            .body > div .row .fr {
                display: inline-block;
                margin-right: 6px;
                min-width: 20px;
                text-align: center;
            }
            .body > div .row .fr hr {
                border-top: 4px solid var(--sec);
                margin: 0;
            }
            .body > div .row .numbers {
                margin-left: 5px;
                font-size: 1.8rem;
            }
            .body > div .row .inputbox input {
                font-size: 1.2rem;
                padding: 2px;
                max-width: 100px;
                margin: 0 5px;
                border-radius: 4px;
            }


    body
        #app.container.my-5.animate__animated.animate__fadeIn.animate__delay-1s
            h1 #{title}
            if subtitle.length>1
                h2 #{subtitle}

            
            .row: .col-12: img(src="aimg/exp.png").w-100

            .instruccion.mt-5 Observa cómo se resuelve el problema, y después contesta los siguentes ejercicios con base en el ejemplo. 

            .row.mt-3.ex1.body
                .col-md-4
                    .h4 Ejercicio
                    .row
                        .fr 2#[hr]3
                        | de 360
                        numbers(c=1) =
                        inputbox(v-model="r[0]" :ref="refCount()" @isright="right++" :answer="240" type="number" placeh="#")
                .col-md-4
                    .h4 Paso 1
                    .row
                        inputbox(v-model="r[1]" :ref="refCount()" @isright="right++" answer="360" type="number" placeh="#")
                        numbers(c=1) ÷
                        inputbox(v-model="r[2]" :ref="refCount()" @isright="right++" answer="3" type="number" placeh="#")
                        numbers(c=1) =
                        inputbox(v-model="r[3]" :ref="refCount()" @isright="right++" answer="120" type="number" placeh="#")
                .col-md-4
                    .h4 Paso 2
                    .row
                        inputbox(v-model="r[4]" :ref="refCount()" @isright="right++" answer="120" type="number" placeh="#")
                        numbers(c=1) x
                        inputbox(v-model="r[5]" :ref="refCount()" @isright="right++" answer="2" type="number" placeh="#")
                        numbers(c=1) =
                        inputbox(v-model="r[6]" :ref="refCount()" @isright="right++" answer="240" type="number" placeh="#")
            
            .row.mt-3.ex1.body
                .col-md-4
                    .h4 Ejercicio
                    .row
                        .fr 4#[hr]5
                        | de 70
                        numbers(c=1) =
                        inputbox(v-model="r[7]" :ref="refCount()" @isright="right++" :answer="56" type="number" placeh="#")
                .col-md-4
                    .h4 Paso 1
                    .row
                        inputbox(v-model="r[8]" :ref="refCount()" @isright="right++" answer="70" type="number" placeh="#")
                        numbers(c=1) ÷
                        inputbox(v-model="r[9]" :ref="refCount()" @isright="right++" answer="5" type="number" placeh="#")
                        numbers(c=1) =
                        inputbox(v-model="r[10]" :ref="refCount()" @isright="right++" answer="14" type="number" placeh="#")
                .col-md-4
                    .h4 Paso 2
                    .row
                        inputbox(v-model="r[11]" :ref="refCount()" @isright="right++" answer="14" type="number" placeh="#")
                        numbers(c=1) x
                        inputbox(v-model="r[12]" :ref="refCount()" @isright="right++" answer="4" type="number" placeh="#")
                        numbers(c=1) =
                        inputbox(v-model="r[13]" :ref="refCount()" @isright="right++" answer="56" type="number" placeh="#")
            
            .row.mt-3.ex1.body
                .col-md-4
                    .h4 Ejercicio
                    .row
                        .fr 1#[hr]7
                        | de 245
                        numbers(c=1) =
                        inputbox(v-model="r[14]" :ref="refCount()" @isright="right++" :answer="35" type="number" placeh="#")
                .col-md-4
                    .h4 Paso 1
                    .row
                        inputbox(v-model="r[15]" :ref="refCount()" @isright="right++" answer="245" type="number" placeh="#")
                        numbers(c=1) ÷
                        inputbox(v-model="r[16]" :ref="refCount()" @isright="right++" answer="7" type="number" placeh="#")
                        numbers(c=1) =
                        inputbox(v-model="r[17]" :ref="refCount()" @isright="right++" answer="35" type="number" placeh="#")
                .col-md-4
                    .h4 Paso 2
                    .row
                        inputbox(v-model="r[18]" :ref="refCount()" @isright="right++" answer="35" type="number" placeh="#")
                        numbers(c=1) x
                        inputbox(v-model="r[19]" :ref="refCount()" @isright="right++" answer="1" type="number" placeh="#")
                        numbers(c=1) =
                        inputbox(v-model="r[20]" :ref="refCount()" @isright="right++" answer="35" type="number" placeh="#")


            finalize(@evaluate="finalizar" @reset="reset" :resultado="resultado" :right="right" :total="total")
