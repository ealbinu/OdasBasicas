    body
        #app.container.my-5.animate__animated.animate__fadeIn.animate__delay-1s
            h1 #{title}
            if subtitle.length>1
                h2 #{subtitle}

            .instruccion.mt-5 Escribe los números que van entre las siguientes cantidades. Observa el ejemplo.

            .row: .col-12.ex1
                img(src="aimg/1a.png").w-100
                .inps
                    template(v-for="(i, index) in [2.05,2.06,2.07,2.08,2.09,2.10,2.11, 13.1, 13.2, 13.3, 13.4, 13.5, 13.6, 13.7, 13.8, 13.9]")
                        inputbox(v-model="r[index]" :ref="refCount()" @isright="right++" :answer="i" type="number" placeh="#")

            .instruccion.mt-5 Resuelve como se indica.

            .row.mt-3.ex2.align-items-center
                .col-md-8
                    choose(v-model="r[16]" :ref="refCount()" num="1." text="Selecciona el antecesor del número 2.652." :options="[2.653,2.651,2.650]" @isright="right++" :answer="2.651")
                    choose(v-model="r[17]" :ref="refCount()" num="2." text="Selecciona el sucesor del número 5.097." :options="[5.0971,5.096,5.099]" @isright="right++" :answer="5.0971")
                    .choose
                        labeltext(num="3.") Escribe tres números que estén entre 0.3 y 0.4.
                    .row.nums
                        .col: inputbox(v-model="r[18]" :ref="refCount()" @isright="right++" :answer="false" :min="0.3" :max="0.4" type="number" placeh="#")
                        .col: inputbox(v-model="r[19]" :ref="refCount()" @isright="right++" :answer="false" :min="0.3" :max="0.4" type="number" placeh="#")
                        .col: inputbox(v-model="r[20]" :ref="refCount()" @isright="right++" :answer="false" :min="0.3" :max="0.4" type="number" placeh="#")

                .col-md: img(src="aimg/2a.png").img-fluid

            .instruccion.mt-5 Ordena los siguientes números de menor a mayor #[strong.accent (naranjas)] y escribe un número que se pueda incluir entre cada número en la serie #[strong.clear (azules)]. Observa el ejemplo.

            recuadropalabras(:palabras="[0.8, 0.79, 0.816, 0.865, 0.9, 0.82, 0.87, 0.85]")
            .row: .col-12.ex3
                img(src="aimg/3a.png").w-100
                .inps
                    template(v-for="(i, index) in [0.816, 0.82, 0.85, 0.865, 0.87, 0.9]")
                        inputbox(v-model="r[index+21]" :ref="refCount()" @isright="right++" :answer="i" type="number" placeh="#")
                .inps2
                    template(v-for="(i, index) in [[0.8,0.816], [0.816, 0.82], [.82,0.85], [.85,0.865], [.865,0.87], [.87,0.9]]")
                        inputbox(v-model="r[index+27]" :ref="refCount()" @isright="right++" :answer="false" :min="i[0]" :max="i[1]" type="number" placeh="#")




            finalize(@evaluate="finalizar" @reset="reset" :resultado="resultado" :right="right" :total="total")
