            .escala {
                border-top: 4px solid #6A4287;
                position: relative;
                margin-top: 20px;
                margin-bottom: 80px;
            }
            .escala .arrl,
            .escala .arrr {
                position: absolute;
                top: -20px;
            }
            .escala .arrl {
                width: 0;
                height: 0;
                border-top: 20px solid transparent;
                border-bottom: 20px solid transparent;
                border-right: 20px solid #6A4287;
                left: -1%;
            }
            .escala .arrr {
                width: 0;
                height: 0;
                border-top: 20px solid transparent;
                border-bottom: 20px solid transparent;
                border-left: 20px solid #6A4287;
                right: -1%;
            }
            .escala .num {
                position: absolute;
                width: 8%;
                text-align: center;
                background: #f5f5f5;
                border-radius: 6px;
                top: 9px;
                font-size: 1.2rem;
                color: #6A4287;
            }
            .escala .num:before {
                content: "";
                width: 10%;
                height: 14px;
                background: #6A4287;
                position: absolute;
                top: -20px;
                left: 50%;
                border-radius: 4px;
            }
            .escala .num.min:before{ height: 10px; top: -16px; }
            .escala .num.nin:before {
                background: var(--main);
            }
            .escala .num .inputbox input {
                padding: 0;
                font-size: 1.2rem;
                border-color: var(--main);
            }
            .ex2 .inputbox input,
            .ex2 .inputbox .numbers {
                font-size: 1.4rem;
                border-radius: 6px;
                color: #6A4287;
            }


